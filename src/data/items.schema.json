{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "integer",
        "maximum": 9999
      },
      "group": {
        "type": "string",
        "anyOf": [
          {
            "pattern": "^tolkien.(location|occupation|life|major-pub|minor-pub)$"
          },
          {
            "pattern": "^lewis.(location|occupation|life|major-pub|minor-pub)$"
          },
          {
            "pattern": "^barfield$"
          },
          {
            "pattern": "^williams$"
          },
          {
            "pattern": "^warren-lewis$"
          },
          {
            "pattern": "^inklings$"
          }
        ]
      },
      "name": {
        "type": "string",
        "maxLength": 100
      },
      "description": {
        "type": "string"
      },
      "start": {
        "type": "string",
        "pattern": "^((1[89][0-9]{2})|(2[0-9]{3}))-((0[1-9])|(1[012]))-(([0-2][0-9])|(3[01]))$"
      },
      "end": {
        "type": "string",
        "pattern": "^((1[89][0-9]{2})|(2[0-9]{3}))-((0[1-9])|(1[012]))-(([0-2][0-9])|(3[01]))$"
      },
      "edtf": {
        "type": "string"
      },
      "priority": {
        "type": "integer",
        "minimum": 0,
        "maximum": 4
      },
      "type": {
        "type": "string",
        "enum": ["point", "range"]
      },
      "source": {
        "type": "string"
      },
      "note": {
        "type": "string"
      }
    },
    "required": ["id", "group", "name", "start", "priority", "type"]
  }
}
